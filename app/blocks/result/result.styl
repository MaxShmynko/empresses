.result
    width 100%
    position relative
    background url(/images/promo.jpg) 0 0/100% 100% no-repeat
    height 100%
    display none

    &__wrap__main
        padding w(100) w(60) w(100) w(64)
        display flex
        flex-direction row
        justify-content flex-start
        +below(768px)
            flex-direction column-reverse
            padding wm(10)
            align-items center

    &__wrap__film
        position relative
        z-index 1
        padding w(15) w(15) w(50)
        +below(768px)
            padding wm(20) 20% wm(35)

    &__answer
        max-width w(1300)
        display flex
        flex-direction column
        align-items center
        position relative
        text-align center
        img
            position absolute
            width 100%
            height w(600)
            top w(30)
            +below(768px)
                position absolute
                height wm(235)
                top wm(-22)

        +below(768px)
            max-width 100%

    &__border
        +below(768px)
            display none


    &__border-mobail
        display none
        +below(768px)
            position absolute
            display block

    &__answer-title
        margin w(0) w(260) w(0) w(140)
        width w(890)
        color $c-beige
        text-shadow w(4) w(4) w(7) $c-black
        font-family $ff-Romul
        font-size w(48)
        font-weight 400
        line-height w(68)
        z-index 1
        +below(768px)
            width wm(300)
            font-size wm(15)
            line-height wm(30)
            margin wm(10) wm(130) wm(0) wm(105)

    &__answer-text
        margin-top w(45)
        max-width w(940)
        color $c-white
        font-family $ff-FuturaPT
        font-size w(32)
        font-weight 400
        line-height w(32)
        margin-bottom w(50)
        text-align left
        z-index 1
        +below(768px)
            margin-top wm(0)
            max-width 65vw
            font-size wm(8)
            line-height wm(10)
            margin-left wm(0)
            margin-bottom wm(20)
        +below(400px)
            margin-left 0

    &__answer-sharing
        z-index 1
        display flex
        +below(768px)
            width wm(275)

    &__answer-sharing-button-vk
        width w(40)
        height w(40)
        background-image url(/images/vk.svg)
        background-size cover
        +below(768px)
            width wm(10)
            height wm(10)

    &__answer-sharing-button-od
        width w(40)
        height w(40)
        background-image url(/images/od.svg)
        background-size cover
        +below(768px)
            width wm(10)
            height wm(10)

    &__answer-sharing-button-tg
        width w(40)
        height w(40)
        background-image url(/images/tg.svg)
        background-size cover
        +below(768px)
            width wm(10)
            height wm(10)

    &__answer-sharing-button-link
        margin-right w(30)
        border-radius w(50)
        border w(1) solid #E0CA7A
        padding w(5) w(30) w(5) w(30)
        flex-shrink 0
        display flex
        align-items center
        justify-content center
        &:hover
            color #BAAD50
            border w(1) solid #BAAD50
            transition 1s
        +below(768px)
            margin-right wm(10)
            border-radius wm(50)
            border wm(1) solid #E0CA7A
            padding wm(5) wm(9)

    &__answer-sharing-button
        margin-right w(150)
        padding w(10) w(30)
        color #FBF4C1
        text-align center
        text-shadow w(4) w(4) w(2) rgba(0, 0, 0, 0.25)
        font-family $ff-Romul
        font-size w(21)
        font-style normal
        font-weight 400
        line-height w(60)
        letter-spacing w(1.05)
        border-radius w(50)
        border w(1) solid #E0CA7A
        background rgba(0, 0, 0, 0.15)
        text-decoration none
        &:hover
            color #BAAD50
            border w(1) solid #BAAD50
            transition 1s
        +below(768px)
            margin-right wm(10)
            margin-left wm(30)
            padding wm(6) wm(7) wm(0) wm(7)
            font-size wm(5)
            line-height wm(8)
            letter-spacing wm(1.05)
            border-radius wm(35)
            border wm(1) solid #E0CA7A

    &__answer-button
        margin w(20) 0 0 27%
        padding w(18) w(70)
        color #FBF4C1
        text-align center
        text-shadow w(4) w(4) w(2) rgba(0, 0, 0, 0.25)
        font-family $ff-Romul
        font-size w(21)
        font-style normal
        font-weight 400
        text-decoration none
        line-height w(38)
        letter-spacing w(1.05)
        border-radius w(35)
        border w(1) solid #E0CA7A
        background rgba(0, 0, 0, 0.15)
        z-index 1
        &:hover
            color #BAAD50
            border w(1) solid #BAAD50
            transition 1s
        +below(768px)
            margin wm(40)
            padding wm(5) wm(10)
            font-size wm(8)
            line-height wm(12)
            letter-spacing wm(1.05)
            border-radius wm(35)

    &__answer-film
        margin w(0) 0 w(30) 18% 
        width w(716)
        height w(151)
        background-image url(/images/result__promo-film.png)
        background-size cover
        +below(768px)
            margin wm(15) 
            width wm(150)
            height wm(30)

    &__wrap__result-img
        position absolute
        max-width w(650)
        width w(650)
        top w(80)
        right w(60)
        img
            width 100%
        +below(768px)
            position relative
            max-width 100%
            width 100%
            top wm(0)
            right wm(0)

    &__footer
        position absolute
        display flex
        align-items center
        justify-content space-between
        width 100%
        padding 0 w(50)
        bottom w(20)
        img
            margin-right w(20)
        +below(1800px)
            bottom w(20)
        +below(720px)
            bottom wm(10)
            padding 0 wm(20) wm(10) wm(20)
            img
                width wm(20)
                margin-right wm(10)
        +below(400px)
            bottom 0

    &__advertisement
        color $c-beige
        font-size w(16)
        font-family $ff-FuturaPT
        +below(720px)
            font-size wm(10)